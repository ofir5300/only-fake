{
  "name": "@only-fake/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "start:all": "concurrently \"yarn workspace @only-fake/client start\" \"yarn workspace @only-fake/server dev\"",
    "docker:setup": "cp client/.env.example client/.env && cp server/.env.example server/.env",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
